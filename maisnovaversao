if a == 8:
	n = str(input('Informe o numero Hexadecimal que deseja transformar para binario: '))
	z = []
	a= int()
	indice = int(0)
	r = int()
	l = []
	b= []
	for i in range (len(n)-1,-1,-1):
		z.append(n[i])
	for v in range (len(z)-1,-1,-1):
		if z[v] == 'A':
			z[v] = '10'
		if z[v] == 'B':
			z[v] = '11'
		if z[v] == 'C':
			z[v] = '12'
		if z[v] == 'D':
			z[v] = '13'
		if z[v] == 'E':
			z[v] = '14'
		if z[v] == 'F':
			z[v] = '15'
		r += int(z[v]) * (16**v)

	while (r > 0):
		l.append(r%2)
		r = r/2 
	for i in range(len(l)-1,-1,-1):
		b.append(l[i])
	for v in range (len(b)-1,-1,-1):
		a += int(b[v]) * (10**indice)
		indice = indice+1
	print('Esse numero em binario e: '+ str(a))

if a == 9:
	n = str(input('Informe o numero Hexadecimal que deseja transformar para octal: '))
	z = []
	r = 0
	a = int
	indice = int()
	r = int()
	l = []
	z = []
	for i in range (len(n)-1,-1,-1):
		z.append(n[i])
	for v in range (len(z)-1,-1,-1):
		if z[v] == 'A':
			z[v] = '10'
		if z[v] == 'B':
			z[v] = '11'
		if z[v] == 'C':
			z[v] = '12'
		if z[v] == 'D':
			z[v] = '13'
		if z[v] == 'E':
			z[v] = '14'
		if z[v] == 'F':
			z[v] = '15'
		r += int(z[v]) * (16**v)

	while(r>0):
		l.append(str(r%8))
		r = r//8
	s=''.join(l[::-1])
	print('O valor desse numero em octal e: '+ str(s))

if a == 10:
	n = int(input('Informe o numero octal que deseja transformar em binario: '))
