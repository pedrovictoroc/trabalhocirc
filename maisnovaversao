def bin_dec(n):
    n=str(input("Informe o numero binario que deseja converter para decimal: "))
    z=[]
    r=0
    for i in range (len(n)-1,-1,-1):
        z.append(n[i])
    for v in range (len(z)-1,-1,-1):
        if z[v] == '1':
            r += int(z[v]) * (2**v)
    print('O valor em decimal e:',r)
    return None
def hex_dec(n):
	n = str(input('Informe o numero Hexadecimal que deseja transformar para decimal: '))
	z = []
	r = 0
	for i in range (len(n)-1,-1,-1):
		z.append(n[i])
	for v in range (len(z)-1,-1,-1):
		if z[v] == 'A':
			z[v] = '10'
		if z[v] == 'B':
			z[v] = '11'
		if z[v] == 'C':
			z[v] = '12'
		if z[v] == 'D':
			z[v] = '13'
		if z[v] == 'E':
			z[v] = '14'
		if z[v] == 'F':
			z[v] = '15'
		r += int(z[v]) * (16**v)
	print('O valor desse numero em decimal e:',r)
	
	return None
def oct_bin(n):
	n = int(input('Informe o numero octal que deseja transformar em binario: '))
	indice = int()
	r = int ()
	l = []
	z = []
	while (n > 0):
	  l.append(n%2)
