if a == 2:
    a = int(input('Diga o numero decimal que deseja converter para hexadecimal: '));
    l = [];
    z = [];
    v=['A','B','C','D','E','F']

    validador = bool(1)

    while validador:
        if a < 16:
            if a >= 10:
                l.append(v[a-10])
            else:
                l.append(a)
        
            validador = bool(0)
        
        else:
            if (a%16) >= 10:
                l.append(v[(a%16)-10])
            else:
                l.append(a%16)
            a = int(a/16)
    for i in range(len(l)-1,-1,-1 ):
        z.append(l[i])
    print('Esse numero em hexadecimal e:',z)

